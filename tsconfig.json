{
  "compilerOptions": {
    "target": "ES2021",
    "module": "node16",
    "lib": ["ES2021", "DOM"],
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },
  },
  "include": ["src/**/*", "scripts"],
  "exclude": ["node_modules", "dist"]
}
